{
  "components": [
    {
      "type": "row",
      "components": [
        {
          "type": "col",
          "class": "col-md-12",
          "components": [
            {
              "data": "",
              "events": {
                "cancel": [
                  {
                    "type": "back"
                  }
                ],
                "submit": [
                  {
                    "error": [
                      {
                        "detail": "Unable to create new OrderDetail!",
                        "severity": "error",
                        "summary": "Error",
                        "type": "notify"
                      }
                    ],
                    "name": "Sample.createOrderDetail",
                    "parameters": [
                      {
                        "name": "OrderDetail",
                        "value": "${event}"
                      }
                    ],
                    "then": [
                      {
                        "path": "order-details",
                        "type": "navigate"
                      }
                    ],
                    "type": "invoke"
                  }
                ]
              },
              "fields": [
                {
                  "property": "Id",
                  "required": true,
                  "title": "Id",
                  "type": "integer"
                },
                {
                  "property": "Quantity",
                  "required": false,
                  "title": "Quantity",
                  "type": "integer"
                },
                {
                  "data": "${getOrdersResult}",
                  "property": "OrderId",
                  "required": false,
                  "textProperty": "UserName",
                  "title": "Order",
                  "type": "lookup",
                  "valueProperty": "Id",
                  "placeholder": "Choose Order"
                },
                {
                  "data": "${getProductsResult}",
                  "property": "ProductId",
                  "required": false,
                  "textProperty": "ProductName",
                  "title": "Product",
                  "type": "lookup",
                  "valueProperty": "Id",
                  "placeholder": "Choose Product"
                }
              ],
              "name": "form0",
              "type": "form"
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "Sample.getOrders",
        "parameters": [],
        "then": [
          {
            "name": "getOrdersResult",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "Sample.getProducts",
        "parameters": [],
        "then": [
          {
            "name": "getProductsResult",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Add Order Detail"
}