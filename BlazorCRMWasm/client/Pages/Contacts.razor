@page "/contacts"
@layout MainLayout
@inherits BlazorCrmWasm.Pages.ContactsComponent

@using Radzen
@using Radzen.Blazor
@using BlazorCrmWasm.Models.Crm
@using Microsoft.AspNetCore.Identity
@using BlazorCrmWasm.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Contacts">
    </RadzenHeading>
    <RadzenTextBox @bind-Value="@contactFilter" Name="Textbox0">
    </RadzenTextBox>
    <RadzenButton Text="Search" Click="@Button1Click">
    </RadzenButton>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Count="@getContactsCount" Data="@getContactsResult" TItem="BlazorCrmWasm.Models.Crm.Contact" LoadData="@Grid0LoadData" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="BlazorCrmWasm.Models.Crm.Contact" Property="Email" Title="Email">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCrmWasm.Models.Crm.Contact" Property="Company" Title="Company">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCrmWasm.Models.Crm.Contact" Property="LastName" Title="Last Name">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCrmWasm.Models.Crm.Contact" Property="FirstName" Title="First Name">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCrmWasm.Models.Crm.Contact" Property="Phone" Title="Phone">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCrmWasm.Models.Crm.Contact" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" Width="70px">
              <Template Context="blazorCrmWasmModelsCrmContact">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, blazorCrmWasmModelsCrmContact))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
