{
  "access": [
    "Authenticated"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Tasks",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "events": {
                    "click": [
                      {
                        "path": "add-task",
                        "then": [
                          {
                            "code": "await grid0.Reload();",
                            "type": "execute"
                          },
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ],
                        "type": "popup"
                      }
                    ]
                  },
                  "icon": "add_circle_outline",
                  "name": "button0",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button"
                },
                {
                  "allowFiltering": true,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columns": [
                    {
                      "property": "Id",
                      "title": "Id"
                    },
                    {
                      "property": "Title",
                      "title": "Title"
                    },
                    {
                      "filterProperty": "Opportunity.Name",
                      "groupProperty": "Opportunity.Name",
                      "property": "OpportunityId",
                      "sortProperty": "Opportunity.Name",
                      "template": "${data.Opportunity?.Name}",
                      "title": "Opportunity"
                    },
                    {
                      "formatString": "{0:MM/dd/yyyy}",
                      "property": "DueDate",
                      "title": "Due Date"
                    },
                    {
                      "filterProperty": "TaskType.Name",
                      "groupProperty": "TaskType.Name",
                      "property": "TypeId",
                      "sortProperty": "TaskType.Name",
                      "template": [
                        {
                          "icon": "settings_phone",
                          "name": "icon0",
                          "style": {
                            "verticalAlign": "middle"
                          },
                          "type": "icon",
                          "visible": "${data.TaskType.Name == \"Call\"}"
                        },
                        {
                          "icon": "video_call",
                          "name": "icon1",
                          "style": {
                            "verticalAlign": "middle"
                          },
                          "type": "icon",
                          "visible": "${data.TaskType.Name == \"Online Meeting\"}"
                        },
                        {
                          "icon": "email",
                          "name": "icon2",
                          "style": {
                            "verticalAlign": "middle"
                          },
                          "type": "icon",
                          "visible": "${data.TaskType.Name == \"Email\"}"
                        },
                        {
                          "name": "label0",
                          "text": "${data.TaskType.Name}",
                          "type": "label"
                        }
                      ],
                      "title": "Task Type"
                    },
                    {
                      "filterProperty": "TaskStatus.Name",
                      "groupProperty": "TaskStatus.Name",
                      "property": "StatusId",
                      "sortProperty": "TaskStatus.Name",
                      "template": [
                        {
                          "icon": "check_circle",
                          "name": "icon3",
                          "style": {
                            "verticalAlign": "middle"
                          },
                          "type": "icon",
                          "visible": "${data.TaskStatus.Name == \"Complete\"}"
                        },
                        {
                          "icon": "cancel",
                          "name": "icon4",
                          "style": {
                            "verticalAlign": "middle"
                          },
                          "type": "icon",
                          "visible": "${data.TaskStatus.Name == \"Not Started\"}"
                        },
                        {
                          "icon": "autorenew",
                          "name": "icon5",
                          "style": {
                            "verticalAlign": "middle"
                          },
                          "type": "icon",
                          "visible": "${data.TaskStatus.Name == \"In Progress\"}"
                        },
                        {
                          "name": "label1",
                          "text": "${data.TaskStatus.Name}",
                          "type": "label"
                        }
                      ],
                      "title": "Task Status"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "template": [
                        {
                          "attributes": [
                            {
                              "name": "@onclick:stopPropagation",
                              "value": true
                            }
                          ],
                          "buttonStyle": "danger",
                          "events": {
                            "click": [
                              {
                                "condition": "await DialogService.Confirm(\"Are you sure you want to delete this record?\") == true",
                                "error": [
                                  {
                                    "detail": "Unable to delete Task",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "CRM.deleteTask",
                                "parameters": [
                                  {
                                    "name": "Id",
                                    "value": "${data.Id}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "await grid0.Reload();",
                                    "condition": "result != null",
                                    "type": "execute"
                                  }
                                ],
                                "type": "invoke"
                              }
                            ]
                          },
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "size": "sm",
                          "text": "",
                          "type": "button"
                        }
                      ],
                      "textAlign": "center",
                      "width": "70px"
                    }
                  ],
                  "data": "${getTasksResult}",
                  "events": {
                    "loadData": [],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "Id",
                            "value": "${event.Id}"
                          }
                        ],
                        "path": "edit-task",
                        "then": [
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ],
                        "type": "popup"
                      }
                    ]
                  },
                  "filterMode": "advanced",
                  "itemType": "RadzenCrm.Models.Crm.Task",
                  "name": "grid0",
                  "title": "",
                  "type": "datagrid"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "CRM.getTasks",
        "parameters": [
          {
            "name": "$expand",
            "value": "Opportunity,TaskType,TaskStatus"
          }
        ],
        "then": [
          {
            "name": "getTasksResult",
            "type": "set",
            "value": "${result}",
            "valueType": "IEnumerable<RadzenCrm.Models.Crm.Task>"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Tasks"
}