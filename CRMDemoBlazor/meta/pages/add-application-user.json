{
  "access": [
    "Sales Manager"
  ],
  "components": [
    {
      "components": [
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "components": [
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "Email",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Email",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "Email",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "textbox",
                              "value": "${user.Email}"
                            },
                            {
                              "component": "Email",
                              "name": "EmailRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "Email is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "FirstName",
                              "name": "FirstNameLabel",
                              "style": {
                                "width": "100%"
                              },
                              "text": "FirstName",
                              "type": "label"
                            }
                          ],
                          "name": "col0",
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "FirstName",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "textbox",
                              "value": "${user.FirstName}"
                            },
                            {
                              "component": "FirstName",
                              "name": "FirstNameRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "FirstName is required",
                              "type": "required-validator"
                            }
                          ],
                          "name": "col1",
                          "type": "col"
                        }
                      ],
                      "name": "row0",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "LastName",
                              "name": "LastNameLabel",
                              "style": {
                                "width": "100%"
                              },
                              "text": "LastName",
                              "type": "label"
                            }
                          ],
                          "name": "col2",
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "LastName",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "textbox",
                              "value": "${user.LastName}"
                            },
                            {
                              "component": "LastName",
                              "name": "LastNameRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "LastName is required",
                              "type": "required-validator"
                            }
                          ],
                          "name": "col3",
                          "type": "col"
                        }
                      ],
                      "name": "row1",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "Picture",
                              "name": "PictureLabel",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Picture",
                              "type": "label"
                            }
                          ],
                          "name": "col4",
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "Picture",
                              "style": {
                                "display": "block"
                              },
                              "type": "file-input",
                              "value": "${user.Picture}"
                            },
                            {
                              "component": "Picture",
                              "name": "PictureRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "Picture is required",
                              "type": "required-validator"
                            }
                          ],
                          "name": "col5",
                          "type": "col"
                        }
                      ],
                      "name": "row2",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "RoleNames",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Roles",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${roles}",
                              "multiple": true,
                              "name": "RoleNames",
                              "style": {
                                "width": "100%"
                              },
                              "textProperty": "Name",
                              "type": "dropdown",
                              "value": "${user.RoleNames}",
                              "valueProperty": "Name"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "Password",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Password",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "Password",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "password",
                              "value": "${user.Password}"
                            },
                            {
                              "component": "Password",
                              "name": "PasswordRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "Password is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "ConfirmPassword",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Confirm password",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "ConfirmPassword",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "password",
                              "value": "${user.ConfirmPassword}"
                            },
                            {
                              "component": "ConfirmPassword",
                              "name": "ConfirmPasswordRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "ConfirmPassword is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "buttonStyle": "primary",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "type": "button"
                            },
                            {
                              "buttonStyle": "light",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              },
                              "text": "Cancel",
                              "type": "button"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "type": "row"
                    }
                  ],
                  "data": "${user}",
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "${result.Message}",
                            "severity": "error",
                            "summary": "Cannot add user",
                            "type": "notify"
                          }
                        ],
                        "name": "Security.createUser",
                        "parameters": [
                          {
                            "name": "User",
                            "value": "${event}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "itemType": "ApplicationUser",
                  "name": "form0",
                  "type": "template-form",
                  "visible": "${user != null}"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "user",
        "type": "set",
        "value": "new ApplicationUser()",
        "valueType": "ApplicationUser"
      },
      {
        "name": "Security.getRoles",
        "then": [
          {
            "name": "roles",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Add Application User"
}