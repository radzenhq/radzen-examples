{
  "access": [
    "Authenticated"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Opportunities",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "addText": "Add",
                  "allowAdd": true,
                  "allowDelete": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columns": [
                    {
                      "footerTemplate": "",
                      "format": "decimal",
                      "property": "Amount",
                      "template": "${data.Amount | currency}",
                      "title": "Amount",
                      "type": "number"
                    },
                    {
                      "footerTemplate": "",
                      "property": "UserId",
                      "sortProperty": "",
                      "template": "${data.User.UserName}",
                      "title": "Sales Representative",
                      "type": "string",
                      "visible": "${security.user.isInRole(\"Sales Manager\")}"
                    },
                    {
                      "filterProperty": "Contact.Email",
                      "footerTemplate": "",
                      "property": "ContactId",
                      "sortProperty": "Contact.Email",
                      "template": "${data.Contact.FirstName} ${data.Contact.LastName}",
                      "title": "Contact",
                      "type": "string"
                    },
                    {
                      "filterProperty": "OpportunityStatus.Name",
                      "footerTemplate": "",
                      "property": "StatusId",
                      "sortProperty": "OpportunityStatus.Name",
                      "template": [
                        {
                          "content": "<span class=\"badge badge-secondary\">${data.OpportunityStatus.Name}</span>",
                          "name": "html0",
                          "type": "html",
                          "visible": "${data.OpportunityStatus.Name == 'Active'}"
                        },
                        {
                          "content": "<span class=\"badge badge-success\">${data.OpportunityStatus.Name}</span>",
                          "name": "html1",
                          "type": "html",
                          "visible": "${data.OpportunityStatus.Name == 'Won'}"
                        },
                        {
                          "content": "<span class=\"badge badge-light\">${data.OpportunityStatus.Name}</span>",
                          "name": "html2",
                          "type": "html",
                          "visible": "${data.OpportunityStatus.Name == 'Inactive'}"
                        },
                        {
                          "content": "<span class=\"badge badge-danger\">${data.OpportunityStatus.Name}</span>",
                          "name": "html3",
                          "type": "html",
                          "visible": "${data.OpportunityStatus.Name == 'Lost'}"
                        }
                      ],
                      "title": "Opportunity Status",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "CloseDate",
                      "template": "${data.CloseDate | utcDate}",
                      "title": "Close Date",
                      "type": "string"
                    },
                    {
                      "property": "Name",
                      "title": "Name",
                      "type": "string"
                    }
                  ],
                  "count": "${getOpportunitiesCount}",
                  "data": "${getOpportunitiesResult}",
                  "emptyText": "No records to display.",
                  "events": {
                    "add": [
                      {
                        "path": "add-opportunity",
                        "type": "popup"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Opportunity",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "CRM.deleteOpportunity",
                        "parameters": [
                          {
                            "name": "Id",
                            "value": "${event.Id}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Opportunity deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "loadData": [
                      {
                        "name": "CRM.getOpportunities",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": "Contact,OpportunityStatus"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "Contact,OpportunityStatus"
                          }
                        ],
                        "then": [
                          {
                            "name": "getOpportunitiesResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getOpportunitiesCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "Id",
                            "value": "${event.Id}"
                          }
                        ],
                        "path": "edit-opportunity",
                        "type": "popup"
                      }
                    ]
                  },
                  "name": "grid0",
                  "title": "",
                  "type": "grid"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "CRM.getOpportunities",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          },
          {
            "name": "$expand",
            "value": "Contact,OpportunityStatus,User"
          }
        ],
        "then": [
          {
            "name": "getOpportunitiesResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getOpportunitiesCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Opportunities"
}